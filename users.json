async function fetchUserById(id) {
  const res = await fetch(
    `${SUPABASE_URL}/rest/v1/players?id=eq.${id}`,
    {
      headers: {
        apikey: SUPABASE_KEY,
        Authorization: `Bearer ${SUPABASE_KEY}`
      }
    }
  );

  const data = await res.json();
  return data.length > 0 ? data[0] : null;
}
